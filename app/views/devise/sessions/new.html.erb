<div class="row">
	<div class="twelve columns centered">
		<h1 class="page_title">Sign in</h1>
	</div>
</div>
<br>
<div class="row">
	<div class="six mobile-four columns centered">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>
</div>

<div class="row">
	<div class="six mobile-four columns centered">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
</div>
<br>
<div class="row">
  	<div class="six mobile-four columns centered">
  		<% if devise_mapping.rememberable? -%>
  		<%= f.check_box :remember_me %><%= f.label :remember_me %>
 	 	<% end -%>
 	</div>
</div>
<br>
<div class="row">
	<div class="six mobile-one columns centered"> 	 	
		<%= f.submit "Sign in" , :class => 'button medium' %>
		<% end %>
	</div>
	<div class="mobile-two"></div>
</div>
<br>
<div class="row">
	<div class="six mobile-four columns centered">
	<%= render "devise/shared/links" %>
	</div>
</div>
